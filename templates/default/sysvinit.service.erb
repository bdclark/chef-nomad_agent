#!/bin/sh
#
# <%= @name %> - this script manages the nomad agent
#
# chkconfig: 345 99 70
# description: this script manages the nomad agent
#
### BEGIN INIT INFO
# Provides:       <%= @name %>
# Required-Start: $local_fs $network
# Required-Stop:  $local_fs $network
# Default-Start: 3 4 5
# Default-Stop:  0 1 2 6
# Short-Description: Manage the nomad agent
### END INIT INFO

instance="<%= @name %>"
prog="<%= File.basename(@daemon) %>"
user="<%= @service_user %>"
exec="<%= @daemon %>"
pidfile="/var/run/$instance.pid"
logfile="<%= @log_dir %>/$instance.log"
lockfile="/var/lock/subsys/$instance"

<%- if node['platform_family'] == 'debian' -%>
[ -e /etc/default/$instance ] && . /etc/default/$instance
<%- else -%>
[ -e /etc/sysconfig/$instance ] && . /etc/sysconfig/$instance
<%- end -%>

<%- @environment.each do |key, val| -%>
export <%= key %>="<%= val %>"
<%- end -%>
export PATH="${PATH:+$PATH:}/usr/sbin:/sbin"

<%- if node['platform_family'] == 'debian' -%>
. /lib/lsb/init-functions

_start() {
  touch $logfile
  chown $user $logfile
  start-stop-daemon --start --quiet --background \
      --pidfile $pidfile --make-pidfile \
      --chuid $user --chdir "<%= @directory %>" \
      --startas /bin/bash -- -c "exec $exec <%= @daemon_options %> >> $logfile 2>&1"
}

_stop() {
  start-stop-daemon --stop --quiet --pidfile $pidfile --user $user --signal INT
}

_status() {
  status_of_proc -p $pidfile $exec $prog
}

_reload() {
  start-stop-daemon --stop --quiet --pidfile $pidfile --user $user --signal HUP
}

<%- else -%>
. /etc/rc.d/init.d/functions

_start() {
    [ -x $exec ] || exit 5

    umask 077
    touch $pidfile $logfile
    chown $user: $pidfile $logfile

    echo -n $"Starting <%= @name %>: "
    daemon \
         --pidfile=$pidfile \
         --user=$user \
         " { $exec <%= @daemon_options %> &>> $logfile & } ; echo \$! >| $pidfile "
     RETVAL=$?
     echo
     [ $RETVAL -eq 0 ] && touch $lockfile
     return $RETVAL
}

_stop() {
    echo -n $"Stopping <%= @name %>: "
    killproc -p $pidfile $exec -INT
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && rm -f $lockfile $pidfile
    return $RETVAL
}

_status() {
    status -p $pidfile -l $prog $exec
}

_reload() {
    echo -n $"Reloading <%= @name %>: "
    killproc -p $pidfile $exec -HUP
    echo
}
<%- end -%>

_restart() {
    _stop
    while :
    do
        ss -pl | fgrep "((\"$prog\"," > /dev/null
        [ $? -ne 0 ] && break
        sleep 0.1
    done
    _start
}

_status_q() {
    _status >/dev/null 2>&1
}

case "$1" in
    start)
        _status_q && exit 0
        _start
        ;;
    stop)
        _status_q || exit 0
        _stop
        ;;
    restart)
        _restart
        ;;
    reload)
        _status_q || exit 7
        _reload
        ;;
    status)
        _status
        ;;
    *)
        echo $"Usage: $0 {start|stop|status|restart|reload}"
        exit 2
esac

exit $?
